  <adminhtml>
    <layout>
      <updates>
        <wsu_mediacontroll>
          <file>wsu/mediacontroll.xml</file>
        </wsu_mediacontroll>
      </updates>
    </layout>
    <translate>
      <modules>
        <Wsu_Mediacontroll>
          <files>
            <default>Wsu_Mediacontroll.csv</default>
          </files>
        </Wsu_Mediacontroll>
      </modules>
    </translate>
	<menu>
		<system>
			<children>
				<tools>
					<children>
						<imgclean translate="title" module="wsu_mediacontroll">
							<title>Rouge Img Cleaner</title>
							<action>mediacontroll/imgclean</action>
							<sort_order>0</sort_order>
						</imgclean>
					</children>
				</tools>	  
			</children>
		</system>
	</menu>
    <acl>
      <resources>
        <all>
          <title>Allow Everything</title>
        </all>
        <admin>
          <children>
            <Wsu_Mediacontroll>
              <title>Rouge Img Cleaner</title>
              <sort_order>10</sort_order>
            </Wsu_Mediacontroll>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
  <default>
    <wsu_mediacontroll>
      <config>
        <!--
				Some examples on the config defaults
				<theme>go</theme>
				<showmageads>0</showmageads>
				<logo>logo.gif</logo>-->
      </config>
    </wsu_mediacontroll>
    <design>
      <watermark>
        <image_adapter>GD2</image_adapter>
        <small_image_adapter>GD2</small_image_adapter>
        <thumbnail_adapter>GD2</thumbnail_adapter>
      </watermark>
    </design>
  </default>
</config>
