  <adminhtml>
    <cms>
      <browser>
        <extensions>
          <allowed>
            <jpg>1</jpg>
            <jpeg>1</jpeg>
            <png>1</png>
            <gif>1</gif>
            <pdf>1</pdf>
            <svg>1</svg>
          </allowed>
          <image_allowed>
            <jpg>1</jpg>
            <jpeg>1</jpeg>
            <png>1</png>
            <gif>1</gif>
            <tiff>1</tiff>
            <tif>1</tif>
            <svg>1</svg>
          </image_allowed>
          <media_allowed>
            <flv>1</flv>
            <swf>1</swf>
            <avi>1</avi>
            <mov>1</mov>
            <rm>1</rm>
            <wmv>1</wmv>
          </media_allowed>
        </extensions>
      </browser>
    </cms>
    <layout>
      <updates>
        <wsu_mediacontroll>
          <file>wsu/mediacontroll.xml</file>
        </wsu_mediacontroll>
      </updates>
    </layout>
    <translate>
      <modules>
        <Wsu_Mediacontroll>
          <files>
            <default>Wsu_Mediacontroll.csv</default>
          </files>
        </Wsu_Mediacontroll>
      </modules>
    </translate>
    <menu>
      <system>
        <children>
          <tools>
            <children>
              <imgclean translate="title" module="mediacontroll">
                <title>Rouge Img Cleaner</title>
                <action>mediacontroll/imgclean</action>
                <sort_order>0</sort_order>
              </imgclean>
            </children>
          </tools>
        </children>
      </system>
    </menu>
    <acl>
      <resources>
        <all>
          <title>Allow Everything</title>
        </all>
        <admin>
          <children>
            <Wsu_Mediacontroll>
              <title>Rouge Img Cleaner</title>
              <sort_order>10</sort_order>
            </Wsu_Mediacontroll>
          </children>
        </admin>
      </resources>
    </acl>
    <translate>
      <modules>
        <Wsu_Mediacontroll>
          <files>
            <default>Wsu_Mediacontroll.csv</default>
          </files>
        </Wsu_Mediacontroll>
      </modules>
    </translate>
  </adminhtml>
  <default>
    <wsu_mediacontroll>
      <config>
        <!--
				Some examples on the config defaults
				<theme>go</theme>
				<showmageads>0</showmageads>
				<logo>logo.gif</logo>-->
      </config>
    </wsu_mediacontroll>
    <design>
      <watermark>
        <image_adapter>GD2</image_adapter>
        <small_image_adapter>GD2</small_image_adapter>
        <thumbnail_adapter>GD2</thumbnail_adapter>
      </watermark>
    </design>
    <catalog>
      <seoimagenames>
        <disable_ext>0</disable_ext>
        <map>%requestHost-%manufacturer-%sku</map>
        <unique>1</unique>
        <lowercase>0</lowercase>
        <generate_labels>0</generate_labels>
        <use_filename_map_for_labels>1</use_filename_map_for_labels>
        <label_map>%name %sku</label_map>
      </seoimagenames>
    </catalog>
  </default>
</config>
