<?xml version="1.0"?>
<config>
  <phpunit>
    <suite>
      <modules>
        <Wsu_Mediacontroll/>
      </modules>
    </suite>
  </phpunit>
  <modules>
    <Wsu_Mediacontroll>
      <version>0.0.1</version>
    </Wsu_Mediacontroll>
  </modules>
  <frontend>
    <routers>
      <mediacontroll>
        <use>standard</use>
        <args>
          <module>Wsu_Mediacontroll</module>
          <frontName>mediacontroll</frontName>
        </args>
      </mediacontroll>
    </routers>
  </frontend>
  <global>
    <helpers>
      <wsu_mediacontroll>
        <class>Wsu_Mediacontroll_Helper</class>
      </wsu_mediacontroll>
    </helpers>
    <blocks>
      <mediacontroll>
        <class>Wsu_Mediacontroll_Block</class>
      </mediacontroll>
      <adminhtml>
        <rewrite>
          <media_uploader>Wsu_Mediacontroll_Block_FilePicker</media_uploader>
        </rewrite>
      </adminhtml>
    </blocks>
	<models>

      <wsu_mediacontroll>
        <class>Wsu_Mediacontroll_Model</class>
        <resourceModel>wsu_mediacontroll_resource</resourceModel>
      </wsu_mediacontroll>
      <wsu_mediacontroll_resource>
        <class>Wsu_Mediacontroll_Model_Resource</class>
        <entities>
          <imgclean>
            <table>wsu_mediacontroll_imgcleaner</table>
          </imgclean>
        </entities>
      </wsu_mediacontroll_resource>
		<catalog>
			<rewrite>
				<product_image>Wsu_Mediacontroll_Model_Product_Image</product_image>
			</rewrite>
		</catalog>
	</models>
    <resources>
      <wsu_mediacontroll_setup>
        <setup>
          <module>Wsu_Mediacontroll</module>
        </setup>
      </wsu_mediacontroll_setup>
    </resources>
  </global>
